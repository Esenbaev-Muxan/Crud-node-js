<body>
    <div class="container">
        <h2><%= title %></h2><br />
        <a href="/add" class="btn btn-primary">Add User</a><br /> <br>


        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone No.</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% user.forEach(function(user) {  %> 
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone_no %></td>
                    <td>
                        <a href="/edit/<%= user.id %>" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
                
                    </td>
                </tr>
                <% }); %> 
            </tbody>
        </table>
    </div>
    
</body>
</html>